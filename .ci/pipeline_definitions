landscaper-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      notifications:
        default:
          on_error:
            triggering_policy: 'always'
            recipients:
            - email_addresses:
              - K8SAppHubPipelineNotification@sap.com
            - committers
            - codeowners
      component_descriptor:
        ocm_repository: landscaper
    steps:
      verify:
        image: 'golang:1.21'
      build:
        image: 'golang:1.21'
        execute: 'build'
        output_dir: 'out'
        timeout: '5m'

  jobs:
    head-update:
      traits:
        draft_release: ~
      steps:
        generate_docs:
          publish_to:
          - source
          depends:
          - verify
    pull-request:
      steps:
        run_integration_test:
          image: 'golang:1.21.7-alpine3.18'
          execute:
          - "dev_integration_test"
          - "--target-clustername=cli-pr"
          output_dir: 'integration_test'
      traits:
        pull-request: ~
        draft_release: ~
        scheduling:
          suppress_parallel_execution: true
    # integration-test:
    #   repo:
    #     trigger: false
    #   traits:
    #     cronjob:
    #       interval: '2h'
    #     scheduling:
    #       suppress_parallel_execution: true
    #   steps:
    #     run_integration_test:
    #       image: 'golang:1.21.7-alpine3.18'
    #       execute:
    #       - "dev_integration_test"
    #       - "--target-clustername=lndscprcli-cro"
    #       output_dir: 'integration_test'
    release:
      steps:
        run_integration_test:
          image: 'golang:1.21.7-alpine3.18'
          execute:
          - "dev_integration_test"
          - "--target-clustername=cli-re"
          output_dir: 'integration_test'
        generate_docs:
          publish_to:
          - source
          depends:
          - verify
          - run_integration_test
        update-release:
          execute: 'update_release.py'
          depends:
          - 'release'
          inputs:
            OUT_PATH: 'out_path'
      traits:
        scheduling:
          suppress_parallel_execution: true
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled

    create_upgrade_prs:
      steps: ~
      traits:
        update_component_deps:
          ignore_prerelease_versions: true
        cronjob:
          interval: '10m'
        version: ~
