landscaper-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      notifications:
        default:
          on_error:
            triggering_policy: 'always'
            recipients:
            - email_addresses:
              - K8SAppHubPipelineNotification@sap.com
            - committers
            - codeowners
      component_descriptor: ~
    steps:
      verify:
        image: 'golang:1.19'
      build:
        image: 'golang:1.19'
        execute: 'build'
        output_dir: 'out'
        timeout: '5m'

  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      steps:
        run_integration_test:
          image: 'golang:1.19-alpine3.16'
          execute:
          - "dev_integration_test"
          - "--target-clustername=landscapercli-pr"
          output_dir: 'integration_test'
      traits:
        pull-request: ~
        draft_release: ~
        scheduling:
          suppress_parallel_execution: true
    integration-test:
      repo:
        trigger: false
      traits:
        cronjob:
          interval: '2h'
        scheduling:
          suppress_parallel_execution: true
      steps:
        run_integration_test:
          image: 'golang:1.19-alpine3.16'
          execute:
          - "dev_integration_test"
          - "--target-clustername=landscapercli-cro"
          output_dir: 'integration_test'
    release:
      steps:
        run_integration_test:
          image: 'golang:1.19-alpine3.16'
          execute:
          - "dev_integration_test"
          - "--target-clustername=int-test"
          output_dir: 'integration_test'
        update-release:
          execute: 'update_release.py'
          depends:
          - 'release'
          inputs:
            OUT_PATH: 'out_path'
      traits:
        scheduling:
          suppress_parallel_execution: true
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled

    create_upgrade_prs:
      steps: ~
      traits:
        component_descriptor: ~
        update_component_deps:
          ignore_prerelease_versions: true
        cronjob:
          interval: '10m'
        version: ~
