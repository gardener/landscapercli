landscaper-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      notifications:
        default:
          on_error:
            email: true
            triggering_policy: 'only_first'
            recipients: 
            - codeowners
      component_descriptor: ~
    steps:
      verify:
        image: 'golang:1.15.2'

jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
    minor-release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled
