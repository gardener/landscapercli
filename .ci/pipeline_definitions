landscaper-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor: ~
    steps:
      verify:
        image: 'golang:1.15.2'

  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled
    release-dev:
      traits:
        version:
          preprocess: 'finalize'
          read_callback: 'version_read_callback.sh'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled
