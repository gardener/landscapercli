        inject_effective_version: true
      component_descriptor: ~
    steps:
      verify:
        image: 'golang:1.15.2'

  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled
      steps:
        <<: *code_test_trait
        run_integration_test:
          execute:
          - dev_integration_test.py
          - --garden-namespace garden-hubtest
          - --target-clustername int-test
          - --testNamespace landscapercli-test
           output_dir: integration_test
    release-dev:
      traits:
        version:
          preprocess: 'finalize'
          version_interface: 'callback'
          read_callback: '.ci/version_read_callback.sh'
          write_callback: '.ci/version_write_callback.sh'
        release:
          nextversion: 'bump_minor'
          release_notes_policy: disabled
